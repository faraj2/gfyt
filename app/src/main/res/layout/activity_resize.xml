<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context=".trails.Resize">
    <ImageView
        android:layout_marginTop="10dp"

        android:scaleType="fitXY"
        android:id="@+id/resize"
     android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:id="@+id/actual"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <FrameLayout

        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ply"
            android:onClick="plyy"
            android:background="@android:color/transparent"
            android:src="@drawable/playbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/donut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:donut_inner_drawable="@drawable/cancel"
app:donut_finished_stroke_width="5dp"
        app:donut_show_text="false"
        app:donut_circle_starting_degree="10"
        app:donut_unfinished_stroke_width="1dp"
        app:donut_unfinished_color="@color/myblue"
        />
    </FrameLayout>
    <io.codetail.widget.RevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/awesome_card"
            style="@style/CardView"
            app:cardBackgroundColor="@color/material_deep_teal_500"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            />
    </io.codetail.widget.RevealLinearLayout>
</LinearLayout>