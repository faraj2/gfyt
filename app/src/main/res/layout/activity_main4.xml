<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame1"

    tools:context="com.f.schoolsintouchteachers.Main4Activity">
    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.f.schoolsintouchteachers.CustomViewPager
            android:id="@+id/vp_vertical_ntb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/ntb"
            />

        <devlight.io.library.ntb.NavigationTabBar
            android:id="@+id/ntb"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:ntb_animation_duration="400"
            app:ntb_badge_bg_color="#ffff0000"
            app:ntb_badge_gravity="top"
            app:ntb_badge_position="right"
            app:ntb_badge_size="10sp"
            app:ntb_badge_title_color="#ffffffff"
            app:ntb_badge_use_typeface="true"
            app:ntb_badged="true"
            app:ntb_bg_color="@color/bluecolor"
            app:ntb_corners_radius="10dp"
            app:ntb_icon_size_fraction="0.5"
            app:ntb_inactive_color="#fff"
            app:ntb_preview_colors="@array/colors"
            app:ntb_scaled="true"
            app:ntb_swiped="true"
            app:ntb_tinted="true"
            app:ntb_title_mode="all"
            app:ntb_title_size="10sp"
            app:ntb_titled="true"
            app:ntb_typeface="fonts/custom_typeface.ttf" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
