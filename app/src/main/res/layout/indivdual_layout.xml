<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/reltvindvdual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyindividual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:fitsSystemWindows="true"
        android:layout_above="@+id/reltv"
        android:layout_marginBottom="5dp"
       />

    <ImageButton
        android:onClick="sendmessage"
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:padding="3dp"
        android:src="@drawable/ic_action_send"
        android:tint="@android:color/background_light" />

    <RelativeLayout
        android:id="@+id/reltv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/send"
        android:layout_toStartOf="@+id/send"
        android:background="@drawable/edittext_white">


        <ImageButton
            android:id="@+id/attachmnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_action_attach"
            android:tint="@android:color/black" />

        <EditText
            android:id="@+id/writemessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/attachmnt"
            android:layout_toStartOf="@+id/attachmnt"
            android:background="@android:color/transparent"
            android:fadeScrollbars="false"
            android:gravity="bottom"
            android:hint="Type your message"
            android:inputType="textMultiLine"
            android:maxHeight="200dp"
            android:padding="10dp"
            android:scrollbars="none"
            android:textColor="@android:color/black" />


    </RelativeLayout>
</RelativeLayout>



</FrameLayout>