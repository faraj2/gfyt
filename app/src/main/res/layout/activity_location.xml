<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location">
    <RelativeLayout
        android:id="@+id/reltvlocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:tint="@color/bluecolor"
            app:srcCompat="@drawable/intouch" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="103dp"
            android:tint="@color/bluecolor"
            app:srcCompat="@drawable/fingerclick" />
        <TextView
            android:id="@+id/txtlocat"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Please choose the location of the school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_below="@+id/txtlocat"
            android:id="@+id/splocation"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:spinnerMode="dropdown"
            android:layout_height="70dp"/>
        <Button
            android:onClick="nextloctn"
            android:textColor="@color/cardview_light_background"
            android:padding="10dp"
            android:background="@color/bluecolor"
            android:text="Next"
            android:id="@+id/btnloction"
            android:layout_below="@+id/splocation"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</FrameLayout>